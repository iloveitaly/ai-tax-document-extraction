{
  "[python]": {
        "editor.codeActionsOnSave": {
          "source.organizeImports": "explicit"
      }
  },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "python.analysis.autoFormatStrings": true,

  // for import autosuggest
  "python.analysis.indexing": true,
  "python.analysis.autoImportCompletions": true,

  // experimental, not sure what this does
  // https://github.com/microsoft/pylance-release/issues/5226
  "python.analysis.addImport.heuristics": true,

  // TODO I had issues with develop = True imports, but it was fixed :/
  // "python.analysis.extraPaths": [
  //   "~/Projects/python"
  // ],

  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.packageIndexDepths": [
    {
      "name": "",
      "depth": 3,
    },
  //   {"name":"pdf2image", "depth":3, "includeAllSymbols": true},
  //   {"name":"schema", "depth":3, "includeAllSymbols": true},
  ],

  "flake8.importStrategy": "fromEnvironment",

  "cSpell.words": [
    "taxdocs"
  ],
  "cSpell.enableFiletypes": [
    "jinja-html",
  ],
  "black-formatter.importStrategy":"fromEnvironment"
}